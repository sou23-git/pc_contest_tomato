<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_help_page1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:gravity="center_horizontal"
        android:text="@string/text_help_page1_title" />

    <LinearLayout
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <ImageView
                android:id="@+id/icon_pomo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc_icon_pomo"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_pomo"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/icon_sns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc_icon_sns"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_sns"
                tools:ignore="ImageContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_icon_pomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_icon_pomo" />

            <TextView
                android:id="@+id/text_icon_sns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/text_icon_sns" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_help1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="@string/text_help_page1_1" />

        <TextView
            android:id="@+id/text_help1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/text_help_page1_2" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_help_pagenum"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="128dp"
                android:layout_marginEnd="128dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_help_page_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_help_page_num1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_help_pagestatus_white_true" />

                <ImageView
                    android:id="@+id/image_help_page_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_help_page_num2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_help_pagestatus_white_false" />

                <ImageView
                    android:id="@+id/image_help_page_num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_help_page_num3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_help_pagestatus_white_false" />

                <ImageView
                    android:id="@+id/image_help_page_num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/desc_help_page_num4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_help_pagestatus_white_false" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>

</LinearLayout>